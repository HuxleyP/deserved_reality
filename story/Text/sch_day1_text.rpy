    $ day_time()
    $ persistent.sprite_time = 'day'
    $ list_sch_ch_known.append('mi')

    scene bg ext_houses_day with dissolve

    ""

    menu:

        "Согласиться помочь":
            $ list_sch_day1_together.append('mi')
            $ pt_mi +=1
            $ pt_pi +=10
            # Мику рада

        "Отказаться":
            # Уходит
            return

    # Помогает
    return


